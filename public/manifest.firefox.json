{
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Настройки VK Tools"
  },
  "name": "VK Tools - улучшение ВКонтакте",
  "version": "6.5.7",
  "icons": {
    "128": "assets/icon128.png",
    "16": "assets/icon16.png",
    "24": "assets/icon24.png",
    "300": "assets/icon300.png",
    "32": "assets/icon32.png",
    "36": "assets/icon36.png",
    "48": "assets/icon48.png"
  },
  "description": "Расширение, делающее времяпрепровождение в VK удобнее и приятнее!",
  "host_permissions": [
    "*://vk.com/*",
    "*://vk.ru/*",
    "*://oauth.vk.com/*",
    "*://vkvideo.ru/*",
    "*://*.vk.com/*",
    "*://*.vkvideo.ru/*"
  ],
  "permissions": [
    "browsingData",
    "unlimitedStorage",
    "storage",
    "activeTab",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ads_request",
        "enabled": true,
        "path": "ads_rules/ads.json"
      }
    ]
  },
  "commands": {
    "reload-extension": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Command+M"
      },
      "description": "Reload extension button"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "src/sw.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vk-tools@example.com",
      "strict_min_version": "128.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://vk.com/*","*://vk.ru/*","*://oauth.vk.com/*","*://oauth.vk.ru/*","*://vkvideo.ru/*","*://*.vk.com/*","*://*.vk.ru/*"
      ],
      "js": [
        "src/content_script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/main.js"
      ],
      "matches": [
        "*://vk.com/*","*://vk.ru/*","*://oauth.vk.com/*","*://oauth.vk.ru/*","*://vkvideo.ru/*","*://*.vk.com/*","*://*.vk.ru/*"
      ]
    }
  ]
}
